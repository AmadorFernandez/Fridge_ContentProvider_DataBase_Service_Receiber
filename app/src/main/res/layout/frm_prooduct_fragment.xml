<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/edtFrmNameProduct"
        />

    <EditText
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de caducidad yyyy-MM-dd"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/edtFrmDateCaducityProduct"
        />


    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/edtStockProduc"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spFrmCategoryProduct"
        ></Spinner>

    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dias de aviso antes de caducar"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/edtTimeAlarm"
        />


</LinearLayout>